#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(40)
        canvas.before:
            Color:
                rgba: 0.95, 0.96, 0.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "LifeLearn Login"
            font_size: '28sp'
            color: 0.1, 0.1, 0.1, 1

        TextInput:
            id: username_input
            hint_text: "Username"
            multiline: False
            background_color: 1, 1, 1, 1
            foreground_color: 0.1, 0.1, 0.1, 1

        TextInput:
            id: password_input
            hint_text: "Password"
            multiline: False
            password: True
            background_color: 1, 1, 1, 1
            foreground_color: 0.1, 0.1, 0.1, 1

        Label:
            id: login_status
            text: ""
            color: 1, 0, 0, 1

        Button:
            text: "Login"
            background_color: 0.15, 0.4, 0.8, 1
            on_press: root.login(username_input.text, password_input.text)

        Button:
            text: "Register"
            background_color: 0.1, 0.8, 0.5, 1
            on_press: root.go_to_register()

<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(40)
        canvas.before:
            Color:
                rgba: 0.95, 0.96, 0.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Register New Account"
            font_size: '28sp'
            color: 0.1, 0.1, 0.1, 1

        TextInput:
            id: new_username
            hint_text: "Username"
            multiline: False
            background_color: 1, 1, 1, 1
            foreground_color: 0.1, 0.1, 0.1, 1

        TextInput:
            id: new_password
            hint_text: "Password"
            multiline: False
            password: True
            background_color: 1, 1, 1, 1
            foreground_color: 0.1, 0.1, 0.1, 1

        Label:
            id: register_status
            text: ""
            color: 1, 0, 0, 1

        Button:
            text: "Register"
            background_color: 0.1, 0.6, 0.4, 1
            on_press: root.register(new_username.text, new_password.text)

        Button:
            text: "Back to Login"
            on_press: root.go_to_login()

<MenuScreen>:
    current_user: ''
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(15)
        canvas.before:
            Color:
                rgba: 0.94, 0.95, 0.97, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: welcome_label
            font_size: '24sp'
            color: 0.1, 0.1, 0.1, 1

        Button:
            text: "Play Budget Game"
            size_hint_y: None
            height: dp(50)
            on_press: root.manager.current = 'budget_game'

        Button:
            text: "Play Situation Game"
            size_hint_y: None
            height: dp(50)
            on_press: root.manager.current = 'situation_game'

        Label:
            text: "Your Recent Scores"
            font_size: '18sp'
            color: 0.15, 0.3, 0.5, 1
            size_hint_y: None
            height: dp(30)

        ScrollView:
            background_color: 0.1, 0.6, 0.4, 1
            BoxLayout:
                id: scores_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                

        Button:
            text: "Logout"
            size_hint_y: None
            height: dp(50)
            background_color: 0.8, 0.1, 0.1, 1
            on_press: root.manager.current = 'login'

<BudgetGame>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(15)
        canvas.before:
            Color:
                rgba: 0.98, 0.99, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Budget Allocation Game"
            font_size: '22sp'
            color: 0.1, 0.1, 0.1, 1

        Slider:
            min: 0
            max: root.total_budget
            value: root.rent
            on_value: root.update_rent(self.value)
        Label:
            text: f"Rent: ₹{int(root.rent)}"
            color: 0.1, 0.6, 0.4, 1

        Slider:
            min: 0
            max: root.total_budget
            value: root.food
            on_value: root.update_food(self.value)
        Label:
            text: f"Food: ₹{int(root.food)}"
            color: 0.1, 0.6, 0.4, 1

        Slider:
            min: 0
            max: root.total_budget
            value: root.fun
            on_value: root.update_fun(self.value)
        Label:
            text: f"Fun: ₹{int(root.fun)}"
            color: 0.1, 0.6, 0.4, 1

        Label:
            text: root.feedback
            color: 0.2, 0.5, 0.2, 1

        Button:
            text: "Submit"
            on_press: root.calculate_budget()

        Button:
            text: "Reset"
            on_press: root.reset()

        Button:
            text: "Back to Menu"
            on_press: root.manager.current = 'menu'

<SituationGame>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(30)
        spacing: dp(15)
        canvas.before:
            Color:
                rgba: 0.97, 0.98, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: question_label
            text: "Scenario question"
            font_size: '20sp'
            color: 0.1, 0.1, 0.1, 1

        Button:
            id: opt1
            text: "Option 1"
            on_press: root.answer(self.text)

        Button:
            id: opt2
            text: "Option 2"
            on_press: root.answer(self.text)

        Button:
            id: opt3
            text: "Option 3"
            on_press: root.answer(self.text)

        Label:
            text: root.feedback
            color: 0.2, 0.4, 0.2, 1

        Button:
            id: next_btn
            text: "Next"
            disabled: True
            on_press: root.next_question()

        Button:
            text: "Back to Menu"
            on_press: root.manager.current = 'menu'
